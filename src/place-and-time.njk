---
layout: layout.njk
pagination:
  data: collections.events
  size: 1
  alias: event
permalink: /events/{{ event.data.id }}/place-and-time.html
---

<div class="page-main__title page-main__title--event">
  <h1>{{ event.data.title }}</h1>
  {# Todo #}
  {# <span class="page-main__status">Предстоящие</span> #}
</div>
<section class="page-main__nav">
  <ul class="event-navigation">
    <li>
      <a class="event-navigation__link" href="{{ event.url }}">Расписание</a>
    </li>
    <li>
      <a class="event-navigation__link event-navigation__link--active">Место и время</a>
    </li>
    <li>
      <a class="event-navigation__link" href="{{ event.data.registrationLink }}" target="_blank" rel="noopener">Регистрация</a>
    </li>
  </ul>
</section>
<section class="page-main__content event-info">
  <span class="event-info__item event-info__item--date">{{ event.data.date | ruDate }}</span>
  <span class="event-info__item event-info__item--time">{{ event.data.time }}</span>
  <span class="event-info__item event-info__item--location">{{ event.data.address }}</span>
</section>
