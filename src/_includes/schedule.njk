<div class="page-main__title page-main__title--event">
  <h1>{{ title }}</h1>
  {# TODO #}
  {# <span class="page-main__status">Предстоящие</span> #}
</div>
<section class="page-main__nav">
  <ul class="event-navigation">
    <li>
      <a class="event-navigation__link event-navigation__link--active">Расписание</a>
    </li>
    <li>
      <a class="event-navigation__link" href="/events/{{ id }}/place-and-time.html">Место и время</a>
    </li>
    <li>
      <a class="event-navigation__link" href="{{ registrationLink }}" target="_blank" rel="noopener">Регистрация</a>
    </li>
  </ul>
</section>

<section class="page-main__content event-agenda">
  <ul class="event-agenda__list">
    {%- for speech in speeches -%}
      <li class="event-agenda__item">
        <div class="event-agenda__time">
          {% if speech.timeStart %}
            <time class="event-agenda__time event-agenda__time--start">
              {{ speech.timeStart }}
            </time>
          {% endif %}

          {% if speech.timeEnd %}
            <time class="event-agenda__time event-agenda__time--end">
              {{ speech.timeEnd }}
            </time>
          {% endif %}
        </div>
        <div class="event-agenda__info">
          <h2 class="event-agenda__title">
            {{ speech.title }}
          </h2>
          <p class="event-agenda__speaker">
            <span class="event-agenda__speaker-name">
              {{ speech.speaker }}
            </span>

            {% if speech.company %}
              <span class="event-agenda__speaker-company">/ {{ speech.company }}</span>
            {% endif %}
          </p>

          {% if speech.description %}
            <div class="event-agenda__description">
              <p>{{ speech.description }}</p>
            </div>
          {% endif %}
        </div>
      </li>
    {%- endfor -%}

