{
  "name": "JSNN",
  "version": "1.0.0",
  "description": "Сайт сообщества JavaScript разработчиков Нижнего Новгорода",
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "9.7.x",
    "browser-sync": "2.26.x",
    "cross-env": "^7.0.0",
    "eslint": "4.16.0",
    "eslint-config-htmlacademy": "0.4.x",
    "gulp": "4.0.x",
    "gulp-csso": "^3.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "8.0.x",
    "gulp-posthtml": "^3.0.4",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "4.0.x",
    "gulp-sourcemaps": "2.6.x",
    "gulp-svgstore": "^7.0.1",
    "gulp-webp": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "pixel-glass": "^1.0.13",
    "posthtml-include": "^1.2.0",
    "rimraf": "^3.0.2",
    "stylelint": "9.10.x",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "scripts": {
    "clean": "run-s clean:*",
    "clean:cache": "rimraf ./.cache",
    "clean:site": "rimraf ./dist",
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint && eslint source/js/",
    "old-build": "gulp build",
    "old-start": "gulp start",
    "webp": "gulp webp",
    "sprite": "gulp sprite",
    "e-build": "eleventy",
    "e-serve": "eleventy --serve",
    "build": "run-s clean build:*",
    "build:html": "cross-env ELEVENTY_ENV=production eleventy",
    "build:assets": "cross-env NODE_ENV=production parcel build ./src/assets/styles/style.scss ./src/assets/js/script.js --out-dir ./dist/assets --no-source-maps",
    "watch": "run-s clean:* && run-p watch:*",
    "watch:html": "cross-env ELEVENTY_ENV=development eleventy --serve --port=8080",
    "watch:assets": "cross-env NODE_ENV=development parcel watch ./src/assets/styles/style.scss ./src/assets/js/script.js --out-dir ./dist/assets --no-source-maps --no-hmr",
    "start": "npm run watch",
    "debug": "DEBUG=* eleventy"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "not dead"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.15"
  },
  "dependencies": {
    "del": "^5.1.0",
    "normalize-scss": "^7.0.1"
  }
}
